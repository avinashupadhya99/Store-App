

		<%= form_for @customer_new, remote: true, id: 'CustomerForm' do |f| %>
			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :first_name %>
				</h5>
					<%= f.text_field :fname, class: "form-control", placeholder: "Enter first name", autofocus: true %>
			</div>
			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :last_name %>
				</h5>
					<%= f.text_field :lname, class: "form-control", placeholder: "Enter last name" %>
			</div>
			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :phone %>
				</h5>
					<%= f.text_field :phone, class: "form-control", placeholder: "Enter phone number" %>
			</div>
			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :email %>
				</h5>
					<%= f.email_field :email, class: "form-control", placeholder: "Enter email address" %>
			</div>
			<div class="form-group text-center">
					<%= f.submit class: 'btn btn-primary' %>
			</div>

		<% end %>
