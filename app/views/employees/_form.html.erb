<%= render 'shared/errors', :obj => @employee %>

<div class="row">
	<div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 col-sm-10 offset-sm-1 col-xs-10 offset-xs-1 col-10 offset-1">
		<%= form_for @employee do |f| %>
			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :first_name %>
				</h5>
					<%= f.text_field :fName, class: "form-control", placeholder: "Enter first name", autofocus: true %>
			</div>
			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :last_name %>
				</h5>
					<%= f.text_field :lName, class: "form-control", placeholder: "Enter last name" %>
			</div>
			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :phone %>
				</h5>
					<%= f.text_field :phone, class: "form-control", placeholder: "Enter phone number" %>
			</div>
			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :email %>
				</h5>
					<%= f.email_field :email, class: "form-control", placeholder: "Enter email address" %>
			</div>
			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :date_of_birth %>
				</h5>
					<%= f.date_field :dob, class: "form-control"%>
			</div>
			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :address %>
				</h5>
					<%= f.text_area :address, class: "form-control", placeholder: "Enter address" %>
			</div>
			<div class="form-group text-center">
					<%= f.submit class: 'btn btn-primary btn-lg' %>
			</div>

		<% end %>
	</div>
</div>