<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%= link_to 'Store', root_path, class: 'navbar-brand' %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to 'Products', products_path, class: 'nav-link' %>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Order
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <%= link_to 'New Order', new_order_path, class: 'dropdown-item' %>
          <%= link_to 'All Orders', aggregated_orders_path, class: 'dropdown-item' %>
        </div>
      </li>
      <% if logged_in? && current_user.admin? %><!--Display employees and customers only to admin-->
        <li class="nav-item">
          <%= link_to 'Employees', employees_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Customers', customers_path, class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
    <ul class="navbar-nav">
      <% if logged_in? %><!--Display account options like View Profile, Edit password and Logout only for logged in users-->
