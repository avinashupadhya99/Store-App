<%= render 'errors' %>

<div class="row">
	<div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1 col-sm-10 offset-sm-1 col-xs-10 offset-xs-1 col-10 offset-1">
		<%= form_for @discount do |f| %>
			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :starts_at %>
				</h5>
					<%= f.date_field :starts_at, class: "form-control" %>
			</div>
			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :ends_at %>
				</h5>
					<%= f.date_field :ends_at, class: "form-control" %>
			</div>
			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :percent_of_discount %>
				</h5>
					<div class="input-group"> 
				        <%= f.number_field :percent, step: :any, class: "form-control", placeholder: "Enter percentage" %>
				        <div class="input-group-append">
				          <div class="input-group-text px-5 font-weight-bold">&nbsp;%&nbsp;</div>
				        </div>
				    </div>
					
			</div>
			<div class="form-group">
				<h5 class="font-weight-normal">
					<%= f.label :product_id %>
				</h5>
					<%= f.number_field :product_id, class: "form-control", placeholder: "Enter product ID" %>
			</div>
			<div class="form-group text-center">
					<%= f.submit class: 'btn btn-primary btn-lg' %>
			</div>

		<% end %>
	</div>
</div>